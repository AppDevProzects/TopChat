<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intropage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView0"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:backgroundTint="@color/skyblue"
            android:outlineSpotShadowColor="@color/black"
            app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iconimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:visibility="visible"
            android:src="@drawable/chaticom"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/appslogen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:textColor="@color/white"
            android:fontFamily="cursive"
            android:text="A New Gen chatting app"
            android:textSize="30sp"
            android:textStyle="italic"></TextView>

    </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/headingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cardView0"
            android:layout_marginTop="30dp"
            android:fontFamily="cursive"
            android:text="TALK-CHAT"
            android:textSize="40sp"
            android:textStyle="bold"></TextView>


        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headingtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/green"
            android:text="NEXT >> "></Button>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>