<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendProfileImage"
        android:layout_margin="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/facecircle">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/friendUername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friendProfileImage"
        android:text="userName"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friendProfileImage"
        android:text="Start New Chat"
        android:layout_below="@+id/friendUername"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:textColor="@color/grey">
    </TextView>



</RelativeLayout>