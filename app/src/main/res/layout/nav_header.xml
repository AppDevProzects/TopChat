<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/white"
    android:backgroundTint="@color/skyBlueBar">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage"
        android:layout_width="80dp"
        android:layout_marginTop="50dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/facecircle">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="full name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/userProfileImage">
    </TextView>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="agroname@gmail.com"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/userProfileImage">
    </TextView>

    <TextView
        android:id="@+id/userNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userProfileImage"
        android:text="+912348665567"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"/>




</RelativeLayout>